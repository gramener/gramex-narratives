{
  "name": "narratives",
  "version": "0.0.1",
  "description": "",
  "module": "narratives.js",
  "browser": "narratives.min.js",
  "scripts": {
    "build-browser": "esbuild src/narratives.ts --format=iife --global-name=gramex.narratives --bundle --sourcemap --minify --outfile=narratives.min.js",
    "build-esm": "esbuild src/narratives.ts --format=esm --bundle --minify --allow-overwrite --outfile=narratives.mjs",
    "build": "npm run build-browser && npm run build-esm",
    "test": "jest"
  },
  "files": [
    "narratives.*"
  ],
  "keywords": [
    "gramex",
    "narratives",
    "nlg",
    "natural language generation",
    "statistics"
  ],
  "author": "S Anand <root.node@gmail.com>",
  "license": "AGPL-3.0-or-later",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.4.3",
    "@types/lodash": "^4.14.191",
    "esbuild": "0.17.10",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
